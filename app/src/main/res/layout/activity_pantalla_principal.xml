<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8c39e"
    android:padding="16dp"
    >


    <ImageButton
        android:id="@+id/imageButtonConsejos"
        android:layout_width="165dp"
        android:layout_height="114dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:contentDescription="Descripción opcional"
        android:scaleType="fitCenter"
        android:src="@drawable/iconadv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="consejos"
        android:textColor="#004d40"
        android:textSize="25sp"
        android:textStyle="bold" />



    <ImageButton
        android:id="@+id/imageButtonEstadisticas"
        android:layout_width="165dp"
        android:layout_height="114dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:contentDescription="Descripción opcional"
        android:scaleType="fitCenter"
        android:src="@drawable/iconchart1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="estadisticas"
        android:textColor="#004d40"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButtonRegistro"
        android:layout_width="165dp"
        android:layout_height="114dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:contentDescription="Descripción opcional"
        android:scaleType="fitCenter"
        android:src="@drawable/balansa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Registro"
        android:textColor="#004d40"
        android:textSize="28sp"
        android:textStyle="bold" />


</LinearLayout>
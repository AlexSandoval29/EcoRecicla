<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaEstadisticas"
    android:background="@color/white">

    <!--Texto Título "Estadisticas"-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Estadísticas     "
        android:gravity="center"
        android:textColor="#388E3C"
        android:textStyle="bold"
        android:background="#F0D9B0"
        android:textSize="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <!--Linea verde-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="#388E3C"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.09"
        android:orientation="horizontal"/>

    <!--TextView: muestra el calendario =ID= calendar-->
    <TextView
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.17"/>

    <!--Botón para abrir el calendario = ID= calendario-->
    <Button
        android:id="@+id/calendario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir calendario"
        android:textSize="12sp"
        android:backgroundTint="#388E3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"/>

    <!--Esta es la imagen de apoyo para las estadísticas-->
    <ImageView
        android:layout_width="254dp"
        android:layout_height="180dp"
        android:src="@drawable/estadisticasimage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <!--Boton para estadistica (Vidrio) =ID= btnVidrio -->
    <Button
        android:id="@+id/btnVidrio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vidrio"
        android:textSize="30dp"
        android:backgroundTint="#0D9DED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintHorizontal_bias="0.2"/>

    <!--Boton para estadistica (Plástico) =ID= btnPlastico -->
    <Button
        android:id="@+id/btnPlastico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plástico"
        android:textSize="30dp"
        android:backgroundTint="#F12F2F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintHorizontal_bias="0.75"
        />

    <!--Boton para estadistica (Papel) =ID= btnPapel -->
    <Button
        android:id="@+id/btnPapel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Papel"
        android:textSize="30dp"
        android:backgroundTint="#42EF4A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.2"/>

    <!--Boton para estadistica (Cartón) =ID= btnCarton -->
    <Button
        android:id="@+id/btnCarton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cartón"
        android:textSize="30dp"
        android:backgroundTint="#F1C93D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.7"/>

    <!--Esta es la linea beige parte inferior-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:background="#F0D9B0"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <!--Esta es la imagen "Logo" de la app, parte inferior-->
    <ImageView
        android:layout_width="128dp"
        android:layout_height="86dp"
        android:src="@drawable/simbolo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.998"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
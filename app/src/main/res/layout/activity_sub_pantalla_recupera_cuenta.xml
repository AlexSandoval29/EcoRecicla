<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubPantallaRecuperaCuenta"
    android:background="@color/white">

    <!--Text "Recupera cuenta-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recupera tu Eco-cuenta"
        android:textColor="#388E3C"
        android:textStyle="bold"
        android:background="#A6FFFFFF"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

    <!--Esta es la imagen inicial "logo" de reciclaje -->
    <ImageView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:src="@drawable/simbolo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"/>
    <!-- "Icono de usuario"-->
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/iconov"
        app:flow_firstHorizontalBias="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.272" />
    <!--"Imagen beige"-->

    <!--"EditText para insertar el correo" = ID = ingresaCorreo-->

    <ImageView
        android:layout_width="380dp"
        android:layout_height="300dp"
        android:src="@drawable/fr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.612"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.549" />

    <EditText
        android:id="@+id/ingresaCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Correo:                                      "
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="#F8FFFFFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39"/>

    <!--Text "Botón para enviar codigo de recuperación" = ID = btnEnviarCorreo-->
    <Button
        android:id="@+id/btnEnviarCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar código"
        android:backgroundTint="#388E3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintHorizontal_bias="0.26"/>

    <!--Text "texto : hemos enviado un"-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hemos enviadó un"
        android:textColor="#388E3C"
        android:maxLines="3"
        android:textStyle="bold"
        android:background="#F7FFFFFF"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.43"
        app:layout_constraintHorizontal_bias="0.75"
        />
    <!--Text "codigo a tu correo"-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="código a tu correo "
        android:textColor="#388E3C"
        android:maxLines="3"
        android:textStyle="bold"
        android:background="#F7FFFFFF"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.455"
        app:layout_constraintHorizontal_bias="0.75"
        />
    <!--EditText "Insertar codigo" = ID = insertarCodigo-->
    <EditText
        android:id="@+id/insertarCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="EInserta el código"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="#F8FFFFFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.505"/>

    <!--EditText "Insertar nueva contraseña" = ID = insertNuevaContrasena-->
    <EditText
        android:id="@+id/insertNuevaContrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nueva contraseña:                            "
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="#F8FFFFFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55"/>

    <!--EditText "Insertar confirmacion nueva contraseña" = ID = insertConfirmarNuevaContrasena-->
    <EditText
        android:id="@+id/insertConfirmarNuevaContrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Confirma la nueva contraseña:       "
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="#F8FFFFFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.60"/>

    <!--Botón: "iniciar sesión" = ID = btnIniciSesionRecupera-->
    <Button
        android:id="@+id/btnIniciSesionRecupera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar sesión"
        android:backgroundTint="#388E3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.675"/>

    <!--Botón: "iniciar sesión con FACEBOOK" = ID = btnInicioSesionFBrecupera-->
    <Button
        android:id="@+id/btnInicioSesionFBrecupera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar sesión con Facebook"
        android:backgroundTint="#032BF4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"/>

    <!--Botón: "iniciar sesión" con GOOGLE = ID = btnInicioSesionGoogleRecupera-->
    <Button
        android:id="@+id/btnInicioSesionGoogleRecupera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar sesión con Google"
        android:backgroundTint="#D3D4DA"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"/>

    <!--Imagen : Logo facebook-->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:src="@drawable/facebook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />
    <!--Imagen : Logo google-->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:src="@drawable/g"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>
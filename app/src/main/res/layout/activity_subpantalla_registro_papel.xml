<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Subpantalla_registro_papel"
    android:background="@color/white">

    <!--Titulo: Papel-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0D9B0"
        android:gravity="center"
        android:text="Papel"
        android:textColor="#388E3c"
        android:textSize="35dp"
        android:textStyle="bold|italic"
        tools:ignore="MissingConstraints" />

    <!--Este texto es la informacion de funcion-->
    <TextView
        android:layout_width="405dp"
        android:layout_height="166dp"
        android:layout_marginStart="4dp"
        android:text="Introduce a continuación el peso en kilogramos de la cantidad de Papel y el valor del kilo y conocerás el valor generado de tu iniciativa para cuidar el planeta"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.127" />

    <!--Este EdirText para recoger la informacion Peso en Kilos = ID= editTextPesoKiloPapel-->
    <EditText
        android:id="@+id/editTextPesoKiloPapel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Peso en Kilos"
        android:inputType="text"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.364" />
    <!--Este EdirText para recoger la informacion Valor de Kilo = ID= editTextValorKilo-->
    <EditText
        android:id="@+id/editTextValorKilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Valor del Kilo $"
        android:inputType="text"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.46" />

    <!--Boton para hacer el calculo del papel =ID= btnCalcularPapel-->
    <Button
        android:id="@+id/btnCalcularPapel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:textSize="25dp"
        android:backgroundTint="#388E3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.561" />



    <!--BTextView para mostrar el resultado en pantalla-->
    <TextView
        android:id="@+id/textViewReultadoPapel"
        android:layout_width="311dp"
        android:layout_height="30dp"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.653" />

    <!--Imagen de "Logo"-->

    <!--texto de "EcoRecicla"-->
    <ImageView
        android:layout_width="109dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.909"
        app:srcCompat="@drawable/simbolo" />

    <TextView
        android:layout_width="411dp"
        android:layout_height="74dp"
        android:background="#F0D9B0"
        android:gravity="center"
        android:text="EcoRecicla"
        android:textColor="#388E3c"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
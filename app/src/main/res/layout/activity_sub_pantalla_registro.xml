<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubPantallaRegistro"
    android:background="@color/white">

    <!--Texto: Registrate-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regístrate"
        android:textColor="#388E3C"
        android:textStyle="bold"
        android:background="#A6FFFFFF"
        android:textSize="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

    <!--Esta es la imagen inicial "logo" de reciclaje -->
    <ImageView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:src="@drawable/simbolo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"/>

    <!-- "Icono de usuario"-->
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/iconov"
        app:flow_firstHorizontalBias="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.272" />

    <!-- "Imagen con fondo beige"-->
    <ImageView
        android:layout_width="380dp"
        android:layout_height="300dp"
        android:src="@drawable/fr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <!--EditText : Correo = ID = insertCorreoRegistro-->
    <EditText
        android:id="@+id/insertCorreoRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Correo:                                      "
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="#F8FFFFFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"/>

    <!--EditTex: Elije nombre de usuario =ID= elijenombreUsuarioRegistro-->
    <EditText
        android:id="@+id/elijenombreUsuarioRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Elige un nombre de usuario:"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="#F8FFFFFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.50"/>

    <!--EditTextText "contraseña" =ID= contrasenaRegistro-->
    <EditText
        android:id="@+id/contrasenaRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Contraseña               :              "
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="#F8FFFFFF"
        android:textSize="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55"/>

    <!--EditTextText "confirma contraseña" = ID= confirmaContrasenaRegistro-->
    <EditText
        android:id="@+id/confirmaContrasenaRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Confirma la contraseña:       "
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="#F8FFFFFF"
        android:textSize="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.60"/>
    <!--Botón: "iniciar sesión"=ID= btnInicioSesionRegistro-->
    <Button
        android:id="@+id/btnInicioSesionRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar sesión"
        android:backgroundTint="#388E3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"/>

    <!--Botón: "iniciar sesión con FACEBOOK"=ID= btnIniciSesionFBRegistro-->
    <Button
        android:id="@+id/btnIniciSesionFBRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar sesión con Facebook"
        android:backgroundTint="#032BF4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"/>

    <!--Botón: "iniciar sesión" con GOOGLE =ID= @+id/btnInicioSesionGoogleRegistro-->
    <Button
        android:id="@+id/btnInicioSesionGoogleRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar sesión con Google"
        android:backgroundTint="#D3D4DA"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"/>

    <!--Imagen : Logo facebook-->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:src="@drawable/facebook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />
    <!--Imagen : Logo google-->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:src="@drawable/g"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />
</androidx.constraintlayout.widget.ConstraintLayout>